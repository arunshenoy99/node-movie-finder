<div id="mycarousel" class="carousel slide carousel-fade d-none d-md-block" data-ride="carousel">
    <div class="carousel-inner d-none d-md-block" role="listbox">
        <div class="carousel-item active">
            <img src="/img/image1.jpg" alt="Jar" class="img-fluid" width="100%" height="100%">
            <div class="carousel-caption">
                <h2 class="carousel-header">MovieZ</h2>
                <h3>Search for movies</h3>
                <a data-toggle="modal" data-target="#searchModal" class="btn btn-outline-warning" role="button" style="margin-top: 40px; font-size: 30px;">Search</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/img/image2.jpg" alt="Jar" class="img-fluid" width="100%" height="100%">
